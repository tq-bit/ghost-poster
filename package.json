{
  "name": "post_from_ghost",
  "version": "1.0.0",
  "description": "This app was written for my article about getting started with Typescript. It demonstrates how to setup and develop a simple web application using TS and Express-Handlebars.",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index && webpack --mode development --watch",
    "build": "rimraf -r dist && webpack",
    "start": "node dist/index.js",
    "start:daemon": "pm2 start dist/index.js -n post_from_ghost",
    "stop": "pm2 delete post_from_ghost"
  },
  "author": "Tobias Quante",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.24.0",
    "express": "^4.17.1",
    "turndown": "^7.1.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.0",
    "@types/turndown": "^5.0.1",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.4.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  }
}
